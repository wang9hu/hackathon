{
    "manifest_version": 3,
    "name": "Kondo Tab Cleaner",
    "description": "Condenses relevant information from your tabs in one place",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon" : "assets/recycle-bin.png"
    },
    "icons" : {
      "128" : "assets/recycle-bin.png"
    },
    "permissions": ["tabs", "storage", "clipboardRead", "activeTab"],
    "commands": {
      "run-foo": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Run \"foo\" on the current page."
      },
      "_execute_action": {
        "suggested_key": {
          "windows": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y",
          "chromeos": "Ctrl+Shift+Y",
          "linux": "Ctrl+Shift+Y"
        }
      }
    }
  }